<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Iniciar Sesión'
            on_press: app.iniciar_sesion()
        Button:
            text: 'Crear Cuenta'
            on_press: app.crear_cuenta()

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Bienvenido/a:' + root.welcome_text
        Button:
            text: 'Cámara'
            on_press: app.abrir_camara(root.welcome_text)
        Button:
            text: 'Archivo'
            on_press: app.listar_archivos(root.welcome_text)
        Button:
            text: 'cerrar sesion'
            on_release: root.manager.current = 'login'

<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: name_input
            hint_text: 'Nombre'
        Button:
            text: 'Tomar Foto'
            on_press: app.tomar_foto(name_input.text)
<FileScreen>:
    BoxLayout:
        orientation: 'vertical'
        RecycleView:
            id: rv
            viewclass: 'BotonYArchivo'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
        Button:
            text: 'Volver'
            on_release: root.manager.current = 'home'

<BotonYArchivo>:
    orientation: 'horizontal'
    Label:
        text: root.archivo
    Button:
        text: 'Abrir'
        on_release: app.abrir_fotos(root.archivo)
