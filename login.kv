<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Face Recognition App'
            size_hint_y: None
            font_size: 34
            height: 50
            color: 1, 1, 1, 1
        Button:
            text: 'Iniciar Sesión'
            background_color: 0, 0, 1, 1
            color: 1, 1, 1, 1
            border_radius: 10
            on_press: app.iniciar_sesion()
        Button:
            text: 'Crear Cuenta'
            background_color: 0, 0, 1, 1
            color: 1, 1, 1, 1
            border_radius: 10
            on_press: app.crear_cuenta()

<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Bienvenido/a:' + root.welcome_text[:-4]
            size_hint_y: None
            font_size: 34
            height: 50
            color: 1, 1, 1, 1
        Button:
            text: 'Cámara'
            background_color: 0.173, 0.569, 0.831, 0.741
            color: 1, 1, 1, 1
            on_press: app.abrir_camara(root.welcome_text)
        Button:
            text: 'Archivo'
            background_color: 0.173, 0.569, 0.831, 0.741
            color: 1, 1, 1, 1
            on_press: app.listar_archivos(root.welcome_text)
        Button:
            text: 'cerrar sesion'
            background_color: 0, 0, 1, 1
            color: 1, 1, 1, 1
            on_release: root.manager.current = 'login'

<RegisterScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Ingrese su nombre de usuario'
            size_hint_y: None
            font_size: 34
            height: 50
            color: 1, 1, 1, 1
        TextInput:
            id: name_input
            hint_text: 'Nombre'
        Button:
            text: 'Tomar Foto'
            background_color: 0, 0, 1, 1
            color: 1, 1, 1, 1
            on_press: app.tomar_foto(name_input.text)
<FileScreen>:
    BoxLayout:
        orientation: 'vertical'
        RecycleView:
            id: rv
            viewclass: 'BotonYArchivo'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
        Button:
            text: 'Volver'
            background_color: 0, 0, 1, 1
            color: 1, 1, 1, 1
            on_release: root.manager.current = 'home'

<BotonYArchivo>:
    orientation: 'horizontal'
    Label:
        text: root.archivo
    Button:
        text: 'Abrir'
        background_color: 0.961, 0.612, 0.212, 0.741
        color: 1, 1, 1, 1
        on_release: app.abrir_fotos(root.archivo)
